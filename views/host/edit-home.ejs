<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-gray-100 to-blue-100 flex flex-col">
  <%- include('../partials/nav') %>
  <main class="flex flex-1 items-center justify-center">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-10 md:p-12 mx-auto mt-10 mb-10">
      <h1 class="text-4xl md:text-5xl font-extrabold text-blue-700 mb-10 text-center tracking-tight drop-shadow-lg">
        <%= editing ? "Edit" : "Add"%> your Home
      </h1>
      <form action="/host/<%= editing ? "edit-home" : "add-home"%>" method="POST" enctype="multipart/form-data" class="space-y-6">
        <input type="hidden" name="id" value="<%= editing ? home._id : ''%>" />
        <div>
          <label for="houseName" class="block text-gray-700 font-semibold mb-2">House Name</label>
          <input 
            type="text" 
            id="houseName"
            name="houseName"
            value="<%= editing ? home.houseName : ''%>"
            placeholder="Name of your house"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            required
          />
        </div>
        <div>
          <label for="price" class="block text-gray-700 font-semibold mb-2">Daily Rent</label>
          <input 
            type="text" 
            id="price"
            name="price"
            value="<%= editing ? home.price : ''%>"
            placeholder="Daily rent of your home"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            required
          />
        </div>
        <div>
          <label for="location" class="block text-gray-700 font-semibold mb-2">Location</label>
          <input 
            type="text" 
            id="location"
            name="location"
            value="<%= editing ? home.location : ''%>"
            placeholder="Where is your home"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            required
          />
        </div>
        <div>
          <label for="rating" class="block text-gray-700 font-semibold mb-2">Rating</label>
          <input 
            type="text" 
            id="rating"
            name="rating"
            value="<%= editing ? home.rating : ''%>"
            placeholder="Rating of the house"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
          />
        </div>
        <div>
          <label for="photo" class="block text-gray-700 font-semibold mb-2">Photo</label>
          <input 
            type="file" 
            id="photo"
            name="photo"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm bg-white focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
          />
        </div>
        <div>
          <label for="description" class="block text-gray-700 font-semibold mb-2">Description</label>
          <textarea
            id="description"
            name="description"
            placeholder="Describe your house"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition resize-none"
            rows="4"
            required
          ><%= editing ? home.description : '' %></textarea>
        </div>
        <div class="flex justify-center">
          <input 
            type="submit" 
            value="<%= editing ? "Update" : "Add"%> Home"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer text-lg tracking-wide"
          >
        </div>
      </form>
    </div>
  </main>
</body>
</html>