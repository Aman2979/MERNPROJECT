<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-yellow-100">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4 flex flex-col items-center min-h-screen">
    <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-700 via-pink-500 to-yellow-500 mb-12 text-center tracking-tight drop-shadow-lg mt-8">
      Forgot Password
    </h1>
    <div class="flex justify-center w-full">
      <form action="/forgot-password" method="POST" class="w-full max-w-md bg-white/95 rounded-2xl shadow-2xl p-8 border border-blue-200 flex flex-col gap-6">

        <div>
          <%- include('../partials/error-messages') %>
          <input 
            id="email"
            type="email" 
            name="email"
            placeholder="Enter your Email"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="flex justify-center mt-4">
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-extrabold text-lg py-3 rounded-xl shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-300"
          >
            Reset Password
          </button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>