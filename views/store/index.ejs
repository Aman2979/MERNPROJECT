<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-gray-100 to-blue-100">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4">
    <div class="container mx-auto max-w-7xl">
      <h1 class="text-6xl md:text-7xl font-extrabold text-blue-700 mb-20 text-center tracking-tight drop-shadow-lg">Welcome to airbnb</h1>
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 justify-center">
          <% homes.forEach(home => { %>
            <div class="flex-shrink-0 w-full bg-white rounded-3xl shadow-2xl hover:shadow-blue-200 hover:scale-105 transition-all duration-300 overflow-hidden border border-gray-200">
              <div class="relative group">
                <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-110">
                <div class="absolute top-4 right-4 bg-white/80 rounded-full px-4 py-1 shadow flex items-center gap-2">
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="text-gray-800 font-semibold"><%= home.rating %>/5</span>
                </div>
              </div>
              <div class="p-7">
                <h2 class="text-2xl font-extrabold text-gray-900 mb-3 truncate"><%= home.houseName %></h2>
                <div class="flex items-center mb-4">
                  <div class="flex items-center bg-blue-50 rounded-full px-3 py-1 shadow-sm">
                    <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span class="text-gray-700 font-medium"><%= home.location %></span>
                  </div>
                </div>
                <div class="flex items-center justify-between mt-6">
                  <span class="text-3xl font-extrabold text-blue-600 bg-blue-50 px-5 py-2 rounded-lg shadow-inner">Rs<%= home.price %></span>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>