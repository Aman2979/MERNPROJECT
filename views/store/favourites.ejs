<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-yellow-100">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4">
    <div class="container mx-auto max-w-7xl">
      <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-700 via-pink-500 to-yellow-500 mb-20 text-center tracking-tight drop-shadow-lg">Here are All the Favourites</h1>
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap gap-12 justify-center">
          <% homes.forEach(home => { %>
            <div class="flex-shrink-0 w-full md:w-96 bg-white rounded-3xl shadow-2xl hover:shadow-yellow-200/80 hover:scale-105 transition-all duration-300 overflow-hidden border-2 border-blue-100">
              <div class="relative">
                <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-64 object-cover object-center rounded-t-3xl border-b-2 border-blue-200">
                <span class="absolute top-4 right-4 bg-yellow-400/90 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg tracking-wide flex items-center gap-1">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span><%= home.rating %>/5</span>
                </span>
              </div>
              <div class="p-7">
                <h2 class="text-2xl font-extrabold text-blue-800 mb-3 tracking-tight truncate"><%= home.houseName %></h2>
                <div class="flex items-center mb-5">
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="ml-2 text-gray-600 font-medium"><%= home.location %></span>
                </div>
                <div class="flex items-center justify-between mt-6">
                  <span class="text-3xl font-extrabold text-blue-600 drop-shadow-sm">â‚¹<%= home.price %></span>
                  <a 
                    href="/homes/<%= home._id %>"
                    class="bg-gradient-to-r from-blue-500 to-blue-700 text-white px-5 py-2 rounded-xl font-semibold shadow-md hover:from-blue-600 hover:to-blue-800 hover:scale-105 transition-all duration-200"
                  >
                    Details
                  </a>
                  <form action="/favourites/delete/<%= home._id %>" method="POST" class="inline-block ml-2">
                    <button class="bg-gradient-to-r from-red-500 to-pink-500 text-white px-5 py-2 rounded-xl font-semibold shadow-md hover:from-red-600 hover:to-pink-600 hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-300">
                      Remove
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </main>
</body>
</html>