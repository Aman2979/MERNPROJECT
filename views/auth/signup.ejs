<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-yellow-100">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4 flex flex-col items-center min-h-screen">
    <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-700 via-pink-500 to-yellow-500 mb-12 text-center tracking-tight drop-shadow-lg mt-8">
      Signup Here
    </h1>
    <div class="flex justify-center w-full">
      <form action="/signup" method="POST" class="w-full max-w-md bg-white/95 rounded-2xl shadow-2xl p-8 border border-blue-200 flex flex-col gap-6">

        <%- include('../partials/error-messages') %>

        <div class="flex flex-col gap-4">
          <input 
            id="firstName"
            type="text" 
            name="firstName"
            value="<%= typeof oldInput !== 'undefined' ? oldInput.firstName : '' %>"
            placeholder="Enter FirstName"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
          <input 
            id="lastName"
            type="text" 
            name="lastName"
            value="<%= typeof oldInput !== 'undefined' ? oldInput.lastName : '' %>"
            placeholder="Enter LastName"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
          <input 
            id="email"
            type="email" 
            name="email"
            value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
            placeholder="Enter your Email"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="flex flex-col gap-4">
          <input 
            id="password"
            type="password" 
            name="password"
            value="<%= typeof oldInput !== 'undefined' ? oldInput.password : '' %>"
            placeholder="Password"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
          <input 
            id="confirm_password"
            type="password" 
            name="confirm_password"
            value="<%= typeof oldInput !== 'undefined' ? oldInput.confirm_password : '' %>"
            placeholder="Confirm Password"
            class="w-full px-4 py-3 border border-blue-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <!-- User Type Radio Buttons -->
        <div>
          <span class="block text-lg font-semibold text-blue-700 mb-2">User Type</span>
          <div class="flex items-center gap-6 mb-2">
            <label class="inline-flex items-center">
              <input  class="form-radio text-blue-600" 
              type="radio"
              name="userType"
              value="guest" 
              <% typeof oldInput !== 'undefined' && oldInput.userType === 'guest' ? 'checked' : '' %>
              >
              <span class="ml-2 text-blue-800 font-medium">Guest</span>
            </label>
            <label class="inline-flex items-center">
              <input  class="form-radio text-blue-600" 
              type="radio"
              name="userType" 
              value="host" 
              <% typeof oldInput !== 'undefined' && oldInput.userType === 'host' ? 'checked' : '' %>
              >
              <span class="ml-2 text-blue-800 font-medium">Host</span>
            </label>
          </div>
        </div>
        <!-- Terms and Conditions Checkbox -->
        <div>
          <label class="inline-flex items-center">
            <input type="checkbox" class="form-checkbox text-blue-600" name="termsAccepted" >
            <span class="ml-2 text-blue-800">I agree to the <a href="#" class="underline text-blue-600 hover:text-blue-800">terms and conditions</a></span>
          </label>
        </div>
        <div class="flex justify-center mt-4">
          <button 
            type="submit"
            class="w-full bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-extrabold text-lg py-3 rounded-xl shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-300"
          >
            Signup
          </button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>