<header
  class="bg-gradient-to-r from-blue-500 via-blue-400 to-blue-600 shadow-xl border-b-2 border-blue-200"
>
  <nav class="container mx-auto px-8 py-5 flex items-center justify-between">
    <div class="flex space-x-8">
      <a
        href="/"
        class="flex items-center gap-2 bg-white/90 hover:bg-blue-100 text-blue-700 font-extrabold text-xl py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-lg border border-blue-200"
      >
        <svg
          class="w-6 h-6 text-blue-600"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path
            d="M12 2C7.03 2 2.5 6.03 2.5 11.5c0 4.42 3.58 8.5 8 8.5s8-4.08 8-8.5C21.5 6.03 16.97 2 12 2zm0 15c-3.31 0-6-2.69-6-6 0-3.31 2.69-6 6-6s6 2.69 6 6c0 3.31-2.69 6-6 6z"
          />
        </svg>
        airbnb
      </a>
      <% if(isLoggedIn) { %> <% if(user.userType === 'guest') { %>
      <a
        href="/homes"
        class="bg-white/80 hover:bg-blue-100 text-blue-700 font-semibold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-md border border-blue-200"
      >
        Homes
      </a>
      <a
        href="/Favourites"
        class="bg-white/80 hover:bg-yellow-100 text-yellow-700 font-semibold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-md border border-yellow-200"
      >
        <svg
          class="inline w-5 h-5 mr-1 text-yellow-400"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M10 15l-5.878 3.09 1.122-6.545L.488 6.91l6.561-.955L10 0l2.951 5.955 6.561.955-4.756 4.635 1.122 6.545z"
          />
        </svg>
        Favourites
      </a>

      <% } else { %>
      <a
        href="host/host-homes"
        class="bg-white/80 hover:bg-green-100 text-green-700 font-semibold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-md border border-green-200"
      >
        <svg
          class="inline w-5 h-5 mr-1 text-green-400"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M10.707 1.293a1 1 0 00-1.414 0l-8 8A1 1 0 002 11h1v6a1 1 0 001 1h4a1 1 0 001-1v-4h2v4a1 1 0 001 1h4a1 1 0 001-1v-6h1a1 1 0 00.707-1.707l-8-8z"
          />
        </svg>
        Host Homes
      </a>
      <a
        href="/host/add-home"
        class="bg-gradient-to-r from-pink-500 to-yellow-500 hover:from-pink-600 hover:to-yellow-600 text-white font-bold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-lg border border-pink-200"
      >
        <svg
          class="inline w-5 h-5 mr-1 text-white"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          viewBox="0 0 24 24"
        >
          <path d="M12 4v16m8-8H4" />
        </svg>
        Add Home
      </a>

      <% } %> 
      <% } %>
    </div>

    <div class="flex items-center space-x-4">
      <% if (!isLoggedIn) { %>
      <a
        href="/signup"
        class="flex items-center gap-2 bg-gradient-to-r from-pink-500 to-yellow-400 hover:from-pink-600 hover:to-yellow-500 text-white font-bold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-xl border-2 border-pink-300 ring-2 ring-yellow-200 hover:ring-pink-400 focus:outline-none focus:ring-4 focus:ring-pink-300"
      >
        <svg
          class="inline w-5 h-5 mr-2 text-white drop-shadow-lg"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          viewBox="0 0 24 24"
        >
          <path d="M12 4v16m8-8H4" />
        </svg>
        <span class="tracking-wide text-lg">Signup</span>
      </a>
      <a
        href="/login"
        class="flex items-center gap-2 bg-gradient-to-r from-pink-500 to-yellow-400 hover:from-pink-600 hover:to-yellow-500 text-white font-bold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-xl border-2 border-pink-300 ring-2 ring-yellow-200 hover:ring-pink-400 focus:outline-none focus:ring-4 focus:ring-pink-300"
      >
        <svg
          class="inline w-5 h-5 mr-2 text-white drop-shadow-lg"
          fill="none"
          stroke="currentColor"
          stroke-width="2.5"
          viewBox="0 0 24 24"
        >
          <path d="M12 4v16m8-8H4" />
        </svg>
        <span class="tracking-wide text-lg">Login</span>
      </a>
      <% } else { %>
      <form action="/logout" method="POST" class="inline">
        <button
          type="submit"
          class="flex items-center gap-2 bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-bold py-2.5 px-7 rounded-xl transition duration-300 ease-in-out transform hover:scale-110 shadow-xl border-2 border-blue-300 ring-2 ring-blue-200 hover:ring-blue-400 focus:outline-none focus:ring-4 focus:ring-blue-300 ml-4"
        >
          <svg
            class="inline w-5 h-5 mr-2 text-white drop-shadow-lg"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            viewBox="0 0 24 24"
          >
            <path d="M6 18L18 6M6 6l12 12" />
          </svg>
          <span class="tracking-wide text-lg">Logout</span>
        </button>
      </form>
      <% } %>
    </div>
  </nav>
</header>
