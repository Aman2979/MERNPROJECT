<%- include('../partials/head') %>
</head>

<body class="min-h-screen bg-gradient-to-br from-blue-50 via-gray-100 to-blue-100">
  <%- include('../partials/nav') %>

  <main class="py-14 px-4">
    <div class="container mx-auto max-w-7xl">

      <!-- Simple Welcome Section -->
      <div class="text-center mb-16">
        <h1 class="text-5xl md:text-6xl font-bold text-blue-700 tracking-tight">
          BookMyStay
        </h1>

        <p class="mt-4 text-lg text-gray-700 max-w-3xl mx-auto">
          BookMyStay is an online homestay booking platform that allows users
          to explore available homes, view details such as price, location,
          and ratings, and make informed booking decisions.
        </p>
      </div>

      <!-- Homes Grid -->
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">

          <% homes.forEach(home => { %>
            <div class="w-full bg-white rounded-2xl shadow-lg hover:shadow-xl transition duration-300 overflow-hidden border border-gray-200">

              <!-- Image -->
              <img 
                src="<%= home.photoUrl %>" 
                alt="<%= home.houseName %>" 
                class="w-full h-60 object-cover"
              >

              <!-- Content -->
              <div class="p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">
                  <%= home.houseName %>
                </h2>

                <!-- Rating -->
                <div class="flex items-center mb-3">
                  <span class="text-gray-700">
                    Rating: <strong><%= home.rating %>/5</strong>
                  </span>
                </div>

                <!-- Location -->
                <div class="flex items-center mb-4">
                  <span class="text-gray-600">
                    Location: <%= home.location %>
                  </span>
                </div>

                <!-- Price -->
                <div class="flex justify-between items-center">
                  <span class="text-lg font-bold text-blue-600">
                    Rs <%= home.price %>
                  </span>

                  <a 
                    href="/homes/<%= home._id %>"
                    class="text-blue-600 hover:underline font-medium">
                    View Details
                  </a>
                </div>
              </div>

            </div>
          <% }); %>

        </div>
      </div>
    </div>
  </main>
  <footer class="bg-gray-900 text-gray-200 mt-20 shadow-inner">
    <div class="container mx-auto max-w-6xl px-6 py-10">
      <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-10">
        
        <!-- About -->
        <div class="flex-1 mb-8 md:mb-0">
          <h3 class="text-2xl font-bold mb-3 text-gray-100 tracking-wide">BookMyStay</h3>
          <p class="text-gray-300 text-base leading-relaxed max-w-xs">
            Your trusted platform to discover and book comfortable homestays with ease, confidence, and convenience.
          </p>
        </div>

        <!-- Quick Links -->
        <div class="flex-1 mb-8 md:mb-0">
          <h4 class="text-lg font-semibold mb-3 text-gray-100">Quick Links</h4>
          <ul class="space-y-1 text-base text-gray-300">
            <li>
              <a href="/" class="hover:text-gray-400 transition-colors">Home</a>
            </li>
            <li>
              <a href="/homes" class="hover:text-gray-400 transition-colors">View Homes</a>
            </li>
            <li>
              <a href="/login" class="hover:text-gray-400 transition-colors">Login</a>
            </li>
            <li>
              <a href="/signup" class="hover:text-gray-400 transition-colors">Sign Up</a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div class="flex-1">
          <h4 class="text-lg font-semibold mb-3 text-gray-100">Contact</h4>
          <ul class="space-y-1 text-base">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M16 2H8C6.895 2 6 2.895 6 4v16c0 1.105.895 2 2 2h8c1.105 0 2-.895 2-2V4c0-1.105-.895-2-2-2z"/>
                <path d="M6 4l6 6 6-6"/>
              </svg>
              support@bookmystay.com
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M3 5h2l3 7-1.5 4.5a1 1 0 00.93 1.32h9.14a1 1 0 00.93-1.32L19 12l3-7h2"/>
              </svg>
              +91 1234567890
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 10.38V21a1 1 0 01-1 1H4a1 1 0 01-1-1V10.38a1 1 0 01.512-.883l8-4.453a1 1 0 01.977 0l8 4.453A1 1 0 0121 10.38z"/>
              </svg>
              India
            </li>
          </ul>
        </div>

      </div>
      <div class="border-t border-gray-700 mt-10 pt-5 text-center text-sm text-gray-400">
        Â© <%= new Date().getFullYear() %> <span class="font-semibold text-gray-100">BookMyStay</span>. All rights reserved.
      </div>
    </div>
  </footer>
  
  
</body>
</html>
