<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-yellow-100">
  <%- include('../partials/nav') %>
  <main class="py-16 px-4 flex flex-col items-center min-h-screen">
    <h1 class="text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-700 via-pink-500 to-yellow-500 mb-12 text-center tracking-tight drop-shadow-lg mt-8">
      <%= editing ? "Edit" : "Add" %> your Home
    </h1>
    <div class="flex justify-center w-full">
      <form action="/host/<%= editing ? "edit-home" : "add-home" %>" method="POST" enctype="multipart/form-data" class="w-full max-w-xl bg-white/90 rounded-3xl shadow-2xl p-10 border-2 border-blue-200">
        <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">
        <div class="mb-6">
          <label class="block text-lg font-semibold text-blue-700 mb-2" for="houseName">
            House Name
          </label>
          <input 
            id="houseName"
            type="text" 
            name="houseName"
            value="<%= editing ? home.houseName : '' %>"
            placeholder="Name of your house"
            class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="mb-6">
          <label class="block text-lg font-semibold text-blue-700 mb-2" for="price">
            Price (â‚¹)
          </label>
          <input 
            id="price"
            type="text" 
            name="price"
            value="<%= editing ? home.price : '' %>"
            placeholder="Enter the Price"
            class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="mb-6">
          <label class="block text-lg font-semibold text-blue-700 mb-2" for="location">
            Location
          </label>
          <input 
            id="location"
            type="text" 
            name="location"
            value="<%= editing ? home.location : '' %>"
            placeholder="Location of the house"
            class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="mb-6">
          <label class="block text-lg font-semibold text-blue-700 mb-2" for="rating">
            Rating
          </label>
          <input 
            id="rating"
            type="text" 
            name="rating"
            value="<%= editing ? home.rating : '' %>"
            placeholder="Rating of this house"
            class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />
        </div>
        <div class="mb-8">
          <label class="block text-lg font-semibold text-blue-700 mb-2" for="photoUrl">
            Photo URL
          </label>
          <input 
            type="file" 
            name="photo"
            class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50"
          />

          <div class="mb-8">
            <label class="block text-lg font-semibold text-blue-700 mb-2" for="description">
              Home Description
            </label>
            <textarea
              id="description"
              name="description"
              rows="4"
              placeholder="Description for your home"
              class="w-full px-5 py-3 border-2 border-blue-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-400 text-lg shadow-sm transition-all duration-200 bg-blue-50 resize-none"
              maxlength="500"
            ><%= editing ? home.description : '' %></textarea>
            <!-- <p class="text-sm text-blue-400 mt-1">Max 500 characters. Highlight unique features, amenities, and nearby attractions.</p> -->
          </div>
        </div>
        <div class="flex justify-center">
          <button 
            type="submit"
            class="bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-extrabold text-lg py-3 px-8 rounded-2xl shadow-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-300"
          >
            <%= editing ? "Update" : "Add" %> Home
          </button>
        </div>
      </form>
    </div>
  </main>
</body>
</html>