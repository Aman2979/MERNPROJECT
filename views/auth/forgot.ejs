<%- include('../partials/head') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-gray-100 to-blue-100 flex flex-col">
  <%- include('../partials/nav') %>
  <main class="flex flex-1 items-center justify-center">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl p-10 md:p-12 mx-auto mt-10 mb-10">
      <h1 class="text-4xl md:text-5xl font-extrabold text-blue-700 mb-10 text-center tracking-tight drop-shadow-lg">Forgot Password</h1>
      <form action="/forgot-password" method="POST" class="space-y-6">

        <%- include('../partials/error-messages') %>
        
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
          <input 
            type="email" 
            name="email"
            id="email"
            placeholder="Enter your Email"
            class="w-full px-5 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition"
            autocomplete="email"
            required
          />
        </div>

        <div class="flex justify-center">
          <input 
            type="submit" 
            value="Reset Password"
            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition duration-300 ease-in-out transform hover:scale-105 cursor-pointer text-lg tracking-wide"
          >
        </div>
      </form>
    </div>
  </main>
</body>
</html>